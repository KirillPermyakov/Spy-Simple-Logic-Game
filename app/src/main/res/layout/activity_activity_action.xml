<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.kirill.p0051_layoutfile.ActivityAction"
    android:orientation="vertical"
    android:weightSum="1">

    <TextView
        android:layout_width="346dp"
        android:layout_height="81dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_weight="0.06"
        android:id="@+id/playerivew" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/enterText"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.06"
        android:layout_x="0dp"
        android:layout_y="109dp"
        android:layout_below="@+id/playerivew"
        android:layout_alignLeft="@+id/playerivew"
        android:layout_alignStart="@+id/playerivew" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="УЗНАТЬ РОЛЬ"
        android:id="@+id/takename"
        android:layout_weight="0.06"
        android:visibility="invisible"
        android:layout_x="136dp"
        android:layout_y="311dp"
        android:layout_above="@+id/nextBUtton"
        android:layout_alignRight="@+id/nextBUtton"
        android:layout_alignEnd="@+id/nextBUtton"
        android:layout_alignLeft="@+id/nextBUtton"
        android:layout_alignStart="@+id/nextBUtton" />

    <Button
        android:layout_width="134dp"
        android:layout_height="wrap_content"
        android:text="Далее"
        android:id="@+id/nextBUtton"
        android:layout_gravity="right"
        android:layout_weight="0.06"
        android:layout_x="122dp"
        android:layout_y="408dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:visibility="invisible" />

    <TextView
        android:layout_width="225dp"
        android:layout_height="33dp"
        android:id="@+id/role"
        android:layout_weight="0.06"
        android:layout_x="72dp"
        android:layout_y="208dp"
        android:layout_above="@+id/takename"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="83dp" />

</RelativeLayout>
