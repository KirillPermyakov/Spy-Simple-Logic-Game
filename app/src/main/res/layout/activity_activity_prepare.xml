<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.kirill.p0051_layoutfile.ActivityPrepare"
    android:orientation="vertical">

    <TextView
        android:layout_width="347dp"
        android:layout_height="51dp"
        android:text="           Количество игроков:"
        android:id="@+id/textView2"
        android:layout_row="0"
        android:layout_column="2"
        android:textSize="23dp"
        android:textIsSelectable="true"
        android:layout_weight="0.00"
        android:layout_x="65dp"
        android:layout_y="15dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Spinner
        style="@style/Animation.AppCompat.DropDownUp"
        android:layout_width="121dp"
        android:layout_height="wrap_content"
        android:id="@+id/spinner"
        android:layout_row="5"
        android:layout_column="2"
        android:clickable="true"
        android:layout_weight="0.00"
        android:layout_gravity="center_vertical"
        android:layout_x="127dp"
        android:layout_y="79dp"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:spinnerMode="dropdown" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:text="НАЧАТЬ"
        android:id="@+id/runbutton"
        android:layout_row="8"
        android:layout_column="2"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.00"
        android:layout_x="157dp"
        android:layout_y="388dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
